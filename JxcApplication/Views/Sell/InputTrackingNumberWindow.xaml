<Window x:Class="JxcApplication.Views.Sell.InputTrackingNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JxcApplication.Views.Sell"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        mc:Ignorable="d"
        Title="输入快递单号" Height="170" Width="800">
    <Border BorderBrush="DodgerBlue" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox x:Name="trackingNumber" Grid.Row="0" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Height="60" Background="AntiqueWhite"></TextBox>
            <Button Grid.Row="1" Width="130" Height="40" Margin="10" Click="Button_Click">确定</Button>
            
        </Grid>
    </Border>
</Window>
