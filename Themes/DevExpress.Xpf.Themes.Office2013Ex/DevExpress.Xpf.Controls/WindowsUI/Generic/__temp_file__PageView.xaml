<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib" xmlns:dxwuit="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/themekeys" xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" xmlns:dxwuii="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/internal" xmlns:dxcop="clr-namespace:DevExpress.Xpf.Controls.Primitives;assembly=DevExpress.Xpf.Controls.v15.2" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">

    <ItemsPanelTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanel}">
        <dxwuii:PageViewStackPanel ItemSpacing="1" ClipToBounds="True" />
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanelHorizontal}">
        <dxwuii:PageViewPanel ItemSpacing="1" Orientation="Horizontal" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanelVertical}">
        <dxwuii:PageViewPanel ItemSpacing="1" Orientation="Vertical" />
    </ItemsPanelTemplate>

    <ControlTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=Template}" TargetType="dxwui:PageView">
        <dx:DXBorder Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <dxwuii:NavigationHeaderControl Margin="{TemplateBinding Padding}" VerticalAlignment="Center" x:Name="PART_NavigationHeader" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" BackCommand="{TemplateBinding BackCommand}" BackCommandParameter="{TemplateBinding BackCommandParameter}" ShowBackButton="{TemplateBinding ShowBackButton}" />
                    <dxcop:ScrollableControl IsScrollable="{TemplateBinding IsScrollable}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}">
                        <ItemsPresenter x:Name="PART_ItemsPresenter" />
                    </dxcop:ScrollableControl>
                </Grid>
                <dxwuii:PageViewContentPanel Grid.Row="1" AnimationDirection="{TemplateBinding AnimationDirection}" AnimationType="{TemplateBinding AnimationType}" AnimationSpeedRatio="{TemplateBinding AnimationSpeedRatio}" ItemCacheMode="{TemplateBinding ItemCacheMode}" />
            </Grid>
        </dx:DXBorder>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=TemplateLeft}" TargetType="dxwui:PageView">
        <dx:DXBorder Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.ColumnSpan="2">
                    <dxwuii:NavigationHeaderControl Margin="{TemplateBinding Padding}" VerticalAlignment="Center" x:Name="PART_NavigationHeader" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" BackCommand="{TemplateBinding BackCommand}" BackCommandParameter="{TemplateBinding BackCommandParameter}" ShowBackButton="{TemplateBinding ShowBackButton}" />
                </Grid>
                <dxcop:ScrollableControl IsScrollable="{TemplateBinding IsScrollable}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}">
                    <ItemsPresenter x:Name="PART_ItemsPresenter" />
                </dxcop:ScrollableControl>
                <dxwuii:PageViewContentPanel Grid.Row="1" Grid.Column="1" AnimationDirection="{TemplateBinding AnimationDirection}" AnimationType="{TemplateBinding AnimationType}" AnimationSpeedRatio="{TemplateBinding AnimationSpeedRatio}" ItemCacheMode="{TemplateBinding ItemCacheMode}" />
            </Grid>
        </dx:DXBorder>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=TemplateRight}" TargetType="dxwui:PageView">
        <dx:DXBorder Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <dxwuii:NavigationHeaderControl Margin="{TemplateBinding Padding}" VerticalAlignment="Center" x:Name="PART_NavigationHeader" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" BackCommand="{TemplateBinding BackCommand}" BackCommandParameter="{TemplateBinding BackCommandParameter}" ShowBackButton="{TemplateBinding ShowBackButton}" />
                </Grid>
                <dxwuii:PageViewContentPanel Grid.Row="1" AnimationDirection="{TemplateBinding AnimationDirection}" AnimationType="{TemplateBinding AnimationType}" AnimationSpeedRatio="{TemplateBinding AnimationSpeedRatio}" ItemCacheMode="{TemplateBinding ItemCacheMode}" />
                <dxcop:ScrollableControl IsScrollable="{TemplateBinding IsScrollable}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}">
                    <ItemsPresenter x:Name="PART_ItemsPresenter" />
                </dxcop:ScrollableControl>
            </Grid>
        </dx:DXBorder>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxwuit:PageViewElementsThemeKey ResourceKey=TemplateBottom}" TargetType="dxwui:PageView">
        <dx:DXBorder Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <dxwuii:NavigationHeaderControl Margin="{TemplateBinding Padding}" VerticalAlignment="Center" x:Name="PART_NavigationHeader" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" BackCommand="{TemplateBinding BackCommand}" BackCommandParameter="{TemplateBinding BackCommandParameter}" ShowBackButton="{TemplateBinding ShowBackButton}" />
                </Grid>
                <dxwuii:PageViewContentPanel Grid.Row="1" AnimationDirection="{TemplateBinding AnimationDirection}" AnimationType="{TemplateBinding AnimationType}" AnimationSpeedRatio="{TemplateBinding AnimationSpeedRatio}" ItemCacheMode="{TemplateBinding ItemCacheMode}" />
                <dxcop:ScrollableControl IsScrollable="{TemplateBinding IsScrollable}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Orientation="{Binding Orientation, RelativeSource={RelativeSource TemplatedParent}}">
                    <ItemsPresenter x:Name="PART_ItemsPresenter" />
                </dxcop:ScrollableControl>
            </Grid>
        </dx:DXBorder>
    </ControlTemplate>


    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.WindowsUI.PageView}" TargetType="{x:Type dxwui:PageView}">
        <Setter Property="Template" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=Template}}" />
        <Setter Property="TemplateRight" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=TemplateRight}}" />
        <Setter Property="TemplateLeft" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=TemplateLeft}}" />
        <Setter Property="TemplateTop" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=Template}}" />
        <Setter Property="TemplateBottom" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=TemplateBottom}}" />
        <Setter Property="ItemsPanel" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=ItemsPanel}}" />
        <Setter Property="Background" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=Background}}" />
        <Setter Property="Padding" Value="40,30,40,20" />
        
    </Style>
    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.WindowsUI.PageViewItem}" TargetType="{x:Type dxwui:PageViewItem}">
        <Setter Property="Template" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=ItemTemplate}}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="{DynamicResource {dxwuit:PageViewElementsThemeKey ResourceKey=HeaderMargin}}" />
    </Style>
</ResourceDictionary>