                                                <dxb:BarButtonItemLink BarItemName="TopPanelOnly" />
                                                <dxb:BarButtonItemLink BarItemName="BottomPanelOnly2by2" />
                                                <dxb:BarButtonItemLink BarItemName="BottomPanelOnly1by4" />
