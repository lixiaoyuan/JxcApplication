<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxreui="http://schemas.devexpress.com/winfx/2008/xaml/richedit" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <!--AgFontSizeListBox-->
    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.RichEdit.UI.AgFontSizeListBox}" TargetType="{x:Type dxreui:AgFontSizeListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dxreui:AgFontSizeListBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBox x:Name="Editor" MaxLength="4" dx:StyleManager.ApplyApplicationTheme="True" AutomationProperties.AutomationId="FontSize" AutomationProperties.Name="FontSize" />
                        <ListBox x:Name="lbFontSize" dx:StyleManager.ApplyApplicationTheme="True" Margin="0,2,0,0" Grid.Row="1" AutomationProperties.AutomationId="FontSizeList" AutomationProperties.Name="FontSizeList" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>