<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxrec="http://schemas.devexpress.com/winfx/2008/xaml/richedit/internal" xmlns:dxret="http://schemas.devexpress.com/winfx/2008/xaml/richedit/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <ControlTemplate x:Key="{dxret:RichEditRulerThemeKey ResourceKey=HorizontalRulerControlTemplate}" TargetType="dxrec:HorizontalRulerControl">
        <Grid Canvas.ZIndex="1">
            <ContentControl Template="{DynamicResource {dxret:RichEditRulerThemeKey ResourceKey=HorizontalRulerBackgroundControlTemplate}}" Focusable="False" />
            <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Surface" Style="{DynamicResource {dxret:RichEditRulerThemeKey ResourceKey=HorizontalRulerContentStyle}}" />
            <dxrec:LeftIndentHotZoneControl x:Name="PART_Indent" Visibility="Visible" Focusable="False">
                <dxrec:LeftIndentHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:LeftIndentHotZoneControl.Clip>
            </dxrec:LeftIndentHotZoneControl>
            <dxrec:RightIndentHotZoneControl x:Name="PART_RightIndent" Visibility="Visible" Focusable="False">
                <dxrec:RightIndentHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:RightIndentHotZoneControl.Clip>
            </dxrec:RightIndentHotZoneControl>
            <dxrec:FirstLineIndentHotZoneControl x:Name="PART_TopIndent" Visibility="Visible" Focusable="False">
                <dxrec:FirstLineIndentHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:FirstLineIndentHotZoneControl.Clip>
            </dxrec:FirstLineIndentHotZoneControl>
            <dxrec:LeftIndentBottomHotZoneControl x:Name="PART_BottomIndent" Visibility="Visible" Focusable="False">
                <dxrec:LeftIndentBottomHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:LeftIndentBottomHotZoneControl.Clip>
            </dxrec:LeftIndentBottomHotZoneControl>
            <dxrec:LeftTabHotZoneControl x:Name="PART_Tab" Visibility="Visible" Focusable="False">
                <dxrec:LeftTabHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:LeftTabHotZoneControl.Clip>
            </dxrec:LeftTabHotZoneControl>
            <dxrec:HorizontalTableHotZoneControl x:Name="PART_HorizontalTable" Visibility="Visible" Focusable="False">
                <dxrec:HorizontalTableHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:HorizontalTableHotZoneControl.Clip>
            </dxrec:HorizontalTableHotZoneControl>
            <dxrec:TabTypeToggleHotZoneControl x:Name="PART_TabTypeToggle" Visibility="Visible" Focusable="False">
                <dxrec:TabTypeToggleHotZoneControl.Clip>
                    <RectangleGeometry Rect="0,0,0,0" />
                </dxrec:TabTypeToggleHotZoneControl.Clip>
            </dxrec:TabTypeToggleHotZoneControl>
            <dxrec:RulerNumberTickMarkControl x:Name="PART_NumberTickMark" Visibility="Visible" Focusable="False" />
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxret:RichEditRulerThemeKey ResourceKey=VerticalRulerControlTemplate}" TargetType="dxrec:VerticalRulerControl">
        <Grid>
            <ContentControl Template="{DynamicResource {dxret:RichEditRulerThemeKey ResourceKey=VerticalRulerBackgroundControlTemplate}}" Focusable="False" />
            <Canvas Canvas.ZIndex="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Surface" Style="{DynamicResource {dxret:RichEditRulerThemeKey ResourceKey=VerticalRulerContentStyle}}" />
            <dxrec:RulerNumberTickMarkControl x:Name="PART_NumberTickMark" Visibility="Visible" Focusable="False" />
        </Grid>
    </ControlTemplate>

</ResourceDictionary>