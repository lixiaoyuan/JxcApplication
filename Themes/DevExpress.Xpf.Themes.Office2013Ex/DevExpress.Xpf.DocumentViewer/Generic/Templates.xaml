                <dxmvvm:Interaction.Triggers>
                    <dxmvvm:EventToCommand EventName="EditValueChanged" Command="{Binding Path=Command}" PassEventArgsToCommand="True" EventArgsConverter="{StaticResource textEditEditValueChangedConverter}">
