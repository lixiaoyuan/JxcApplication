        </dxb:BarCheckItem>
    </DataTemplate>
    <DataTemplate x:Key="{dxdvt:DocumentViewerThemeKey ResourceKey=SetZoomModeItemTemplate}">
        <dxb:BarCheckItem GroupIndex="{Binding Path=GroupIndex}" Content="{Binding Path=Caption}" Hint="{Binding Path=Hint}" Glyph="{Binding Path=SmallGlyph, Converter={dxdv:UriToBitmapImageConverter}}" LargeGlyph="{Binding Path=LargeGlyph, Converter={dxdv:UriToBitmapImageConverter}}" Command="{Binding Path=Command}" CommandParameter="{Binding Path=ZoomMode}" GlyphAlignment="Top" AllowUncheckInGroup="True" IsChecked="{Binding Path=IsChecked}" KeyGesture="{Binding Path=KeyGesture}">
