            <TextBlock VerticalAlignment="Center" Text=" / " />
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=PageCount}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="{dxdvt:DocumentViewerThemeKey ResourceKey=RibbonTemplate}">
