    <DataTemplate x:Key="{dxdvt:DocumentViewerThemeKey ResourceKey=BarToggleButtonTemplate}">
        <dxb:BarCheckItem GroupIndex="{Binding Path=GroupIndex}" Content="{Binding Path=Caption}" Hint="{Binding Path=Hint}" Glyph="{Binding Path=SmallGlyph, Converter={dxdv:UriToBitmapImageConverter}}" LargeGlyph="{Binding Path=LargeGlyph, Converter={dxdv:UriToBitmapImageConverter}}" Command="{Binding Path=Command}" GlyphAlignment="Top" AllowUncheckInGroup="True" IsChecked="{Binding Path=IsChecked}">
