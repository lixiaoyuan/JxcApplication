    <DataTemplate x:Key="GanttViewExpandedResourceTemplate" DataType="{x:Type dxschd:VisualGanttResource}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Width="15" Height="15" Command="{Binding CollapseCommand}" CommandParameter="{Binding View.Control}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="+" Margin="2" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" Text="{Binding Path=ResourceHeader.ResourceCaption}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="GanttViewCollapsedResourceTemplate" DataType="{x:Type dxschd:VisualGanttResource}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Width="15" Height="15" Command="{Binding ExpandCommand}" CommandParameter="{Binding View.Control}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="-" Margin="2" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" Text="{Binding Path=ResourceHeader.ResourceCaption}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="GanttViewChildResourceTemplate" DataType="{x:Type dxschd:VisualGanttResource}">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Margin="5" Text="{Binding Path=ResourceHeader.ResourceCaption}" />
        </Grid>
    </DataTemplate>

    <dxschd:GanttResourceTemplateSelector x:Key="GanttResourceTemplateSelector" ChildNode="{StaticResource GanttViewChildResourceTemplate}" RootNode="{StaticResource GanttViewExpandedResourceTemplate}" CollapsedNode="{StaticResource GanttViewCollapsedResourceTemplate}" />

    <Style x:Key="{dxscht:GanttViewThemeKey ResourceKey=GanttViewGroupByDate}" TargetType="{x:Type dxschd:VisualGanttViewGroupByDate}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxschd:VisualGanttViewGroupByDate}">
                    <Grid UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <Grid.Resources>
                            <dxschd:ResourceNavigatorVisibilityToElementPositionConverter x:Key="TimelineViewThemeKey_ScaleOtherLevelHeaderConverter" VisibleElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=ScaleOtherLevelHeaderGroupByDateDefaultElementPosition}}" OuterSeparatorWhenHidden="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=ScaleOtherLevelHeaderGroupByDateRightCornerSeparatorPosition}}">
                            </dxschd:ResourceNavigatorVisibilityToElementPositionConverter>
                            <dxschd:ResourceNavigatorVisibilityToElementPositionConverter x:Key="TimelineViewThemeKey_ScaleTopLevelHeaderConverter" VisibleElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=ScaleTopLevelHeaderGroupByDateDefaultElementPosition}}" OuterSeparatorWhenHidden="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=ScaleTopLevelHeaderGroupByDateRightCornerSeparatorPosition}}">
                            </dxschd:ResourceNavigatorVisibilityToElementPositionConverter>
                            <dxschd:ResourceNavigatorVisibilityToConverter x:Key="ResourceNavigatorVisibilityToConverter" />
                            <dxschd:AppointmentStatusDisplayTypeToVisibileConverter x:Key="StatusDisplayTypeToVisibileConverter" />
                        </Grid.Resources>
                        <dx:XPFContentControl Style="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=GroupByDateContainerStyle}}">
                            <dxschd:GantViewGroupByDateLayoutPanel x:Name="LayoutPanel" ViewInfo="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}" DateHeaderLevelElementPosition="{Binding View.Control.ResourceNavigator.Visibility, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource TimelineViewThemeKey_ScaleOtherLevelHeaderConverter}}" DateHeaderTopLevelElementPosition="{Binding View.Control.ResourceNavigator.Visibility, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource TimelineViewThemeKey_ScaleTopLevelHeaderConverter}}" CellStyle="{Binding View.CellStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" MoreButtonStyle="{Binding View.MoreButtonStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" SelectionBarCellStyle="{Binding View.SelectionBarCellStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" NavigationPrevButtonStyle="{Binding View.NavigationButtonPrevStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" NavigationNextButtonStyle="{Binding View.NavigationButtonNextStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" DraggedAppointmentStyle="{Binding View.DragDropHoverTimeCellsStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" SelectionTemplate="{Binding View.SelectionTemplate, RelativeSource={RelativeSource Mode=TemplatedParent}}" SnapToCells="{Binding View.AppointmentDisplayOptions.SnapToCellsMode, RelativeSource={RelativeSource Mode=TemplatedParent}}" AppointmentAutoHeight="{Binding View.AppointmentDisplayOptions.AppointmentAutoHeight, RelativeSource={RelativeSource Mode=TemplatedParent}}" IsAppointmentStatusVisible="{Binding View.AppointmentDisplayOptions.StatusDisplayType, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource StatusDisplayTypeToVisibileConverter}}" ResourceHeaderElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=ResourceHeadersElementPosition}}" SelectionBarElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=SelectionBarContanerGroupByNonePosition}}" SelectionBarHeight="{Binding View.SelectionBar.Height, RelativeSource={RelativeSource Mode=TemplatedParent}}" SelectionBarVisible="{Binding View.SelectionBar.Visible, RelativeSource={RelativeSource Mode=TemplatedParent}}" Scheduler="{Binding View.Control, RelativeSource={RelativeSource Mode=TemplatedParent}}" ResourceNavigatorStyle="{Binding View.Control.ResourceNavigatorVerticalStyle, RelativeSource={RelativeSource Mode=TemplatedParent}}" ResourceNavigatorVisibility="{Binding View.Control.ResourceNavigator.Visibility, RelativeSource={RelativeSource Mode=TemplatedParent}}" VirtualizationMode="Recycling" AdornedBorderStyle="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=AdornedBorderStyle}}" ResourceScrollBarVisible="{Binding View.TimelineScrollBarVisibility, RelativeSource={RelativeSource Mode=TemplatedParent}}" TimeCellElementPosition="End,End,End,End,None,None">
                                <dxschd:GantViewGroupByDateLayoutPanel.DateTimeScrollBarAreaTemplate>
                                    <ControlTemplate>
                                        <ScrollBar dxschd:SchedulerScrollBarManager.BindToSchedulerControl="True" x:Name="PART_TimeLineScrollBar" Orientation="Horizontal" />
                                    </ControlTemplate>
                                </dxschd:GantViewGroupByDateLayoutPanel.DateTimeScrollBarAreaTemplate>
                                <dxschd:GantViewGroupByDateLayoutPanel.TopLeftCornerAreaTemplate>
                                    <ControlTemplate>
                                        <dxschd:HeaderControl Orientation="Horizontal" SnapsToDevicePixels="True" dxschd:SchedulerItemsControl.ElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=TopLeftCornerGroupByDateElementPosition}}" Visibility="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=HeaderCornerVisibility}}" ResourceColor="{x:Null}" />
                                    </ControlTemplate>
                                </dxschd:GantViewGroupByDateLayoutPanel.TopLeftCornerAreaTemplate>
                                <dxschd:GantViewGroupByDateLayoutPanel.BottomLeftCornerAreaTemplate>
                                    <ControlTemplate>
                                        <dx:XPFContentControl VerticalAlignment="Stretch" Style="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=VerticalHeadersContainerStyle}}">
                                            <dxschd:VerticalHeaderControl x:Name="BottomLeftHeader" SnapsToDevicePixels="True" dxschd:SchedulerItemsControl.ElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=BottomLeftCornerGroupByDateElementPosition}}" Visibility="{DynamicResource {dxscht:SchedulerViewThemeKey ResourceKey=HeaderCornerVisibility}}">
                                                <dxschd:VerticalHeaderControl.ResourceColor>
                                                    <!--BEGIN WPF-->
                                                    <Binding Path="ViewInfo.ResourceContainers.Last.ResourceHeader.Brushes.ResourceHeader" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type dxschd:GantViewGroupByDateLayoutPanel}}" />
                                                    <!--END WPF-->
                                                    <!--ONLY SL<Binding Path="ViewInfo.ResourceContainers.Last.ResourceHeader.Brushes.ResourceHeader" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=dxschd:GantViewGroupByDateLayoutPanel}" />ONLY SL-->
                                                </dxschd:VerticalHeaderControl.ResourceColor>
                                            </dxschd:VerticalHeaderControl>
                                        </dx:XPFContentControl>
                                    </ControlTemplate>
                                </dxschd:GantViewGroupByDateLayoutPanel.BottomLeftCornerAreaTemplate>
                                <dxschd:GantViewGroupByDateLayoutPanel.BottomRightCornerAreaTemplate>
                                    <ControlTemplate>
                                        <dx:CornerBox x:Name="Corner" UseLayoutRounding="True" SnapsToDevicePixels="True" />
                                    </ControlTemplate>
                                </dxschd:GantViewGroupByDateLayoutPanel.BottomRightCornerAreaTemplate>
                                <dxschd:GantViewGroupByDateLayoutPanel.TopRightCornerAreaTemplate>
                                    <ControlTemplate>
                                        <dxschd:HeaderControl Orientation="Horizontal" SnapsToDevicePixels="True" Visibility="{Binding ElementName=LayoutPanel, Path=ViewInfo.Control.ResourceNavigator.Visibility, Converter={StaticResource ResourceNavigatorVisibilityToConverter}}" dxschd:SchedulerItemsControl.ElementPosition="{DynamicResource {dxscht:TimelineViewThemeKey ResourceKey=TopRightCornerGroupByDateElementPosition}}" ResourceColor="{x:Null}" />
                                    </ControlTemplate>
                                </dxschd:GantViewGroupByDateLayoutPanel.TopRightCornerAreaTemplate>
                            </dxschd:GantViewGroupByDateLayoutPanel>
                        </dx:XPFContentControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>