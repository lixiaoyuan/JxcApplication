<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys" xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/docking/platform" xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Docking.VisualElements.DropBoundsControl}" TargetType="{x:Type ve:DropBoundsControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ve:DropBoundsControl">
                    <Grid x:Name="PART_Bounds">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="PART_Row0" Height="0*" />
                            <RowDefinition x:Name="PART_Row1" Height="*" />
                            <RowDefinition x:Name="PART_Row2" Height="0*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="PART_Col0" Width="0*" />
                            <ColumnDefinition x:Name="PART_Col1" Width="*" />
                            <ColumnDefinition x:Name="PART_Col2" Width="0*" />
                        </Grid.ColumnDefinitions>
                        <ve:psvContentPresenter Grid.Column="1" Grid.Row="1" Content="{TemplateBinding Content}" />
                        <Rectangle x:Name="PART_Center" Fill="{TemplateBinding Background}" Grid.Column="1" Grid.Row="1" Opacity="0.15" Visibility="Collapsed" IsHitTestVisible="False" RadiusX="2" RadiusY="2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        <Rectangle Fill="{TemplateBinding Background}" Grid.Column="0" Grid.Row="1" Opacity="0.15" />
                        <Rectangle Fill="{TemplateBinding Background}" Grid.Column="2" Grid.Row="1" Opacity="0.15" />
                        <Rectangle Fill="{TemplateBinding Background}" Grid.Column="1" Grid.Row="0" Opacity="0.15" />
                        <Rectangle Fill="{TemplateBinding Background}" Grid.Column="1" Grid.Row="2" Opacity="0.15" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="DraggingStates">
                                <VisualState x:Name="EmptyDraggingState" />
                                <VisualState x:Name="DropCenterState">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Visibility)" Storyboard.TargetName="PART_Center">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="DragSourceState">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="0.35" Storyboard.TargetProperty="(Grid.Opacity)" Storyboard.TargetName="PART_Bounds" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{DynamicResource {dxt:BrushElementsThemeKey ResourceKey=MoveTargetBackground}}" />
    </Style>    
</ResourceDictionary>