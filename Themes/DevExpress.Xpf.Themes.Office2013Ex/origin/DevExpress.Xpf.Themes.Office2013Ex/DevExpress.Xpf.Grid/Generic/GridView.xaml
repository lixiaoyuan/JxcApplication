    <Style x:Key="{dxdst:DefaultStyleThemeKey FullName=DevExpress.Xpf.Grid.BandsContainerControl}" TargetType="{x:Type dxg:BandsContainerControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dxg:BandsContainerControl}">
                    <Grid x:Name="PART_Root">
                        <Grid.ColumnDefinitions>
