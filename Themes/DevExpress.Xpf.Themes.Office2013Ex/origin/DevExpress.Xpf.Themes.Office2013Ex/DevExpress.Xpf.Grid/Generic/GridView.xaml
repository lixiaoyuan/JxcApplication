                                <dxg:BandsPanel x:Name="bandsPanel" AllowVirtualization="True" Bands="{Binding Path=DataControl.BandsLayout.FixedNoneVisibleBands}" dxg:GridControl.CurrentView="{Binding}">
                                    <dx:DragManager.DropTargetFactory>
                                        <dxg:BandedViewBandHeaderDropTargetFactory FixedStyle="None" />
                                    </dx:DragManager.DropTargetFactory>
                                </dxg:BandsPanel>
                            </dxg:GridScrollablePart.FixedNoneContent>
                        </dxg:GridScrollablePart>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
